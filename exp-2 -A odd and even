# include <stdio.h>
int main(){
	int num;
	printf("enter the number:");
	scanf("%d",&num);
	
	if (num % 2 ==0)
	printf("%d is even",num);
	else
		printf(" %d is odd ", num);
	return 0;
	
}

OUTPUT

enter the number:12
12 is even
